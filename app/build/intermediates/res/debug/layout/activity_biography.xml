<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BiographyActivity" >

    <include
        android:id="@+id/headerContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/header_home" />

    <ImageView
        android:id="@+id/biohHeadImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerContainer"
        android:src="@drawable/biography_banner" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/biohHeadImageView"
        android:background="@android:drawable/picture_frame"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            
             <TextView
                android:id="@+id/websiteTitle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#bfd5ee"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/PARTY_WEBSITE_TITLE"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/personalWebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:fontFamily="sans-serif-light"
                android:onClick="personalURLClicked"
                android:text="@string/PERSONAL_WEBSITE_URL"
                android:textColor="#0000FF"
                android:textSize="16sp" />
            
            <TextView
                android:id="@+id/birthTitle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#bfd5ee"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/Birth"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/birthInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/Birth_Info"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/educationTitle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:background="#bfd5ee"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/Education"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/educaionInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/Education_Info"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/familyTitle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:background="#bfd5ee"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/Family"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/familyInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/Family_Info"
                android:textSize="16sp" />

                        <TextView
                android:id="@+id/familyStatus"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:background="#bfd5ee"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/FAMILY_STATUS"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/familyStatusInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/FAMILY_STATUS_INFO"
                android:textSize="16sp" />
            
            </LinearLayout>
    </ScrollView>

</RelativeLayout><!-- From: file:/Users/kapil/AndroidStudioProjects/project_android_AS/app/src/main/res/layout/activity_biography.xml -->