<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <include
        android:id="@+id/headerContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/header_home" />

    <ImageView
        android:id="@+id/headImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerContainer"
        android:src="@drawable/head_banner" />

    <GridView
        android:id="@+id/gridHome"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headImageView"
        android:gravity="center_vertical"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
       
        android:scrollbars="none"
        android:verticalSpacing="5dp" />

    <ImageView
        android:id="@+id/head2ImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridHome"
        android:src="@drawable/footer_banner" />

</RelativeLayout><!-- From: file:/Users/kapil/AndroidStudioProjects/project_android_AS/app/src/main/res/layout/activity_main.xml -->